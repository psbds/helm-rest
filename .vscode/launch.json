    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229,
            "outFiles": [
                "${workspaceRoot}/bin"
            ],
            "sourceMaps": true,
            "timeout": 30000,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test-debug"
            ],
            "port": 9229,
            "outFiles": [
                "${workspaceRoot}/bin"
            ],
            "sourceMaps": true,
            "timeout": 30000,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std"
        }
    ]
}